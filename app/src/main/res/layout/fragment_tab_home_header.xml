<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dip">

    <ImageView
        android:id="@+id/imageView_user_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@color/apptheme_color"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="8dip"
            android:paddingEnd="16dip"
            android:paddingStart="16dip"
            android:paddingTop="8dip">

            <ImageView
                android:id="@+id/imageView_user"
                android:layout_width="55dip"
                android:layout_height="55dip"
                android:scaleType="fitCenter"
                android:src="@drawable/default_avatar_rounded"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="8dip">

                <TextView
                    android:id="@+id/textView_username"
                    style="@style/TypefaceStyle.ProximaNova.semibold"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"/>

                <TextView
                    android:textSize="14sp"
                    android:id="@+id/textView_userLevel"
                    style="@style/TypefaceStyle.ProximaNova.semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/WhiteSmokeHalf"
            android:baselineAligned="false"
            android:divider="@drawable/divider_horizontal"
            android:orientation="horizontal"
            android:padding="8dip"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingEnd="8dip"
                android:paddingStart="8dip">

                <TextView
                    style="@style/TypefaceStyle.ProximaNova.bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="2"
                    android:maxLines="2"
                    android:textSize="14sp"
                    android:text="@string/tabHome_title_creditsNumber"/>

                <TextView
                    android:id="@+id/textView_creditsNumber"
                    style="@style/TypefaceStyle.ProximaNova.semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:gravity="center"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingEnd="8dip"
                android:paddingStart="8dip">

                <TextView
                    android:textSize="14sp"
                    style="@style/TypefaceStyle.ProximaNova.bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="@string/tabHome_title_monsterCaptured"/>

                <TextView
                    android:id="@+id/textView_monsterCaptured"
                    style="@style/TypefaceStyle.ProximaNova.semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:gravity="center"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingEnd="8dip"
                android:paddingStart="8dip">

                <TextView
                    android:textSize="14sp"
                    style="@style/TypefaceStyle.ProximaNova.bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="@string/tabHome_title_areaCaptured"/>

                <TextView
                    android:id="@+id/textView_areaCaptured"
                    style="@style/TypefaceStyle.ProximaNova.semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:gravity="center"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingEnd="8dip"
                android:paddingStart="8dip">

                <TextView
                    android:textSize="14sp"
                    style="@style/TypefaceStyle.ProximaNova.bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="@string/tabHome_title_allyOnline"/>

                <TextView
                    android:id="@+id/textView_allyOnline"
                    style="@style/TypefaceStyle.ProximaNova.semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:gravity="center"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
