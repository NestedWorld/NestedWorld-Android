<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:alpha="0.5"
        android:scaleType="fitXY"
        android:id="@+id/imageView_user_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/apptheme_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dip"
            android:paddingEnd="16dip"
            android:paddingStart="16dip"
            android:paddingTop="16dip">

            <ImageView
                android:id="@+id/imageView_user"
                android:layout_width="55dip"
                android:layout_height="55dip"
                android:scaleType="fitCenter"
                android:src="@drawable/default_avatar"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dip">

                <TextView
                    android:id="@+id/textView_username"
                    style="@style/TypefaceStyle.ProximaNova"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/textView_userLevel"
                    style="@style/TypefaceStyle.ProximaNova"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:gravity="center"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:divider="@drawable/divider_horizontal_white"
            android:orientation="horizontal"
            android:padding="8dip"
            android:showDividers="middle">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingEnd="8dip"
                android:paddingStart="8dip">

                <TextView
                    android:gravity="center"
                    android:maxLines="2"
                    android:lines="2"
                    style="@style/TypefaceStyle.ProximaNova.bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tabHome_title_creditsNumber"
                    android:textColor="@color/DarkGray"
                    android:id="@+id/textView"/>

                <TextView
                    android:id="@+id/textView_creditsNumber"
                    style="@style/TypefaceStyle.ProximaNova.semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:gravity="center"
                    android:textColor="@color/DarkGray"
                    android:textSize="22sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingEnd="8dip"
                android:paddingStart="8dip">

                <TextView
                    android:maxLines="2"
                    android:lines="2"
                    style="@style/TypefaceStyle.ProximaNova.bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/tabHome_title_monsterCaptured"
                    android:textColor="@color/DarkGray"/>

                <TextView
                    android:id="@+id/textView_monsterCaptured"
                    style="@style/TypefaceStyle.ProximaNova.semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:gravity="center"
                    android:textColor="@color/DarkGray"
                    android:textSize="22sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingEnd="8dip"
                android:paddingStart="8dip">

                <TextView
                    android:maxLines="2"
                    android:lines="2"
                    style="@style/TypefaceStyle.ProximaNova.bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/tabHome_title_areaCaptured"
                    android:textColor="@color/DarkGray"/>

                <TextView
                    android:id="@+id/textView_areaCaptured"
                    style="@style/TypefaceStyle.ProximaNova.semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:gravity="center"
                    android:textColor="@color/DarkGray"
                    android:textSize="22sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingEnd="8dip"
                android:paddingStart="8dip">

                <TextView
                    android:maxLines="2"
                    android:lines="2"
                    style="@style/TypefaceStyle.ProximaNova.bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/tabHome_title_allyOnline"
                    android:textColor="@color/DarkGray"/>

                <TextView
                    android:id="@+id/textView_allyOnline"
                    style="@style/TypefaceStyle.ProximaNova.semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:gravity="center"
                    android:textColor="@color/DarkGray"
                    android:textSize="22sp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
