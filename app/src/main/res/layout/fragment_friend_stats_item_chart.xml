<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/friend_piechart"
    android:layout_height="@dimen/friend_piechart"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dip">

    <TextView
        android:id="@+id/textview_piechart_friend_title"
        style="@style/TypefaceStyle.ProximaNova"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/apptheme_color"
        android:textSize="14sp"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart_friend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>