<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/apptheme_color_dark"
        android:orientation="vertical"
        android:padding="8dip"
        android:showDividers="middle">

        <TextView
            android:id="@+id/textView_gender"
            style="@style/TypefaceStyle.ProximaNova.light"
            android:textColor="@color/apptheme_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="8dip"/>

        <TextView
            android:id="@+id/textView_pseudo"
            style="@style/TypefaceStyle.ProximaNova.light"
            android:textColor="@color/apptheme_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="8dip"/>

        <TextView
            android:textColor="@color/apptheme_color"
            android:id="@+id/textView_birthDate"
            style="@style/TypefaceStyle.ProximaNova.light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="8dip"/>

        <TextView
            android:textColor="@color/apptheme_color"
            android:id="@+id/textView_city"
            style="@style/TypefaceStyle.ProximaNova.light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="8dip"/>

        <TextView
            android:textColor="@color/apptheme_color"
            android:id="@+id/textView_registeredAt"
            style="@style/TypefaceStyle.ProximaNova.light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="8dip"/>

        <TextView
            android:textColor="@color/apptheme_color"
            android:id="@+id/textView_email"
            style="@style/TypefaceStyle.ProximaNova.light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="8dip"/>

        <TextView
            android:textColor="@color/apptheme_color"
            android:id="@+id/textView_backgroundUrl"
            style="@style/TypefaceStyle.ProximaNova.light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="8dip"/>

        <TextView
            android:textColor="@color/apptheme_color"
            android:id="@+id/textView_level"
            style="@style/TypefaceStyle.ProximaNova.light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="8dip"/>

        <TextView
            android:textColor="@color/apptheme_color"
            android:id="@+id/textView_avatar"
            style="@style/TypefaceStyle.ProximaNova.light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="8dip"/>

        <Button
            android:id="@+id/button_logout"
            style="@style/AppTheme.button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:padding="8dip"
            android:text="@string/profile_msg_logout"
            android:textColor="@color/white"/>

    </LinearLayout>

</ScrollView>