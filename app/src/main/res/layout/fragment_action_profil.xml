<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dip"
    android:background="@color/WhiteSmoke">

    <LinearLayout
        android:padding="8dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            style="@style/TypefaceStyle.ProximaNova.light"
            android:padding="8dip"
            android:id="@+id/textView_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="8dip"
            android:id="@+id/textView_pseudo"
            style="@style/TypefaceStyle.ProximaNova.light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="8dip"
            android:id="@+id/textView_birthDate"
            style="@style/TypefaceStyle.ProximaNova.light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="8dip"
            android:id="@+id/textView_city"
            style="@style/TypefaceStyle.ProximaNova.light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="8dip"
            android:id="@+id/textView_registeredAt"
            style="@style/TypefaceStyle.ProximaNova.light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="8dip"
            android:id="@+id/textView_email"
            style="@style/TypefaceStyle.ProximaNova.light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="8dip"
            android:id="@+id/textView_backgroundUrl"
            style="@style/TypefaceStyle.ProximaNova.light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="8dip"
            android:id="@+id/textView_level"
            style="@style/TypefaceStyle.ProximaNova.light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="8dip"
            android:id="@+id/textView_avatar"
            style="@style/TypefaceStyle.ProximaNova.light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:padding="8dip"
            android:id="@+id/button_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_msg_logout"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>
