<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/apptheme_color"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listView_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/apptheme_background"
        android:dividerHeight="0.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dip">

        <EditText
            android:id="@+id/editText_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/chat_title"
            android:inputType="text"
            android:textColor="@color/apptheme_background"
            android:textColorHint="@color/apptheme_background"/>

        <Button
            android:id="@+id/button_send_message"
            style="@style/AppTheme.button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat_msg_button"/>

    </LinearLayout>

</LinearLayout>