<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/desc"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.nestedworld.nestedworld.customWidget.typeface.TypefaceTextView
            android:id="@+id/textView_title"
            style="@style/TypefaceStyle.ProximaNova.bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dip"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="28sp"/>

        <com.nestedworld.nestedworld.customWidget.typeface.TypefaceTextView
            android:id="@+id/textView_subtitle"
            style="@style/TypefaceStyle.ProximaNova.semibold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dip"
            android:gravity="center"
            android:text="Attrapez les tous et devenez le champion!"
            android:textColor="@color/black"
            android:textSize="22sp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlayout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/global_padding"
        android:weightSum="2">

        <com.nestedworld.nestedworld.customWidget.typeface.TypefaceButton
            android:id="@+id/button_login"
            style="@style/TypefaceStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_login_short"
            android:textColor="@color/white"/>

        <com.nestedworld.nestedworld.customWidget.typeface.TypefaceButton
            android:id="@+id/button_inscription"
            style="@style/TypefaceStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_inscription"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>