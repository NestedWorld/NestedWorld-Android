<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Proxima font -->
    <style name="TypefaceStyle" parent="android:TextAppearance">
        <item name="fontPath">fonts/ProximaNova-Reg.ttf</item>
    </style>

    <style name="TypefaceStyle.ProximaNova">
        <item name="fontPath">fonts/ProximaNova-Reg.ttf</item>
    </style>

    <style name="TypefaceStyle.ProximaNova.bold">
        <item name="fontPath">fonts/ProximaNova-Bold.ttf</item>
    </style>

    <style name="TypefaceStyle.ProximaNova.semibold">
        <item name="fontPath">fonts/ProximaNova-Sbold.ttf</item>
    </style>

    <style name="TypefaceStyle.ProximaNova.thin">
        <item name="fontPath">fonts/ProximaNova-Thin.ttf</item>
    </style>

    <style name="TypefaceStyle.ProximaNova.light">
        <item name="fontPath">fonts/ProximaNova-Light.ttf</item>
    </style>

    <!-- Custom TabLayout style for displaying spannable-->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/apptheme_color</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>