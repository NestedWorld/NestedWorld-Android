<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Proxima font -->
    <style name="TypefaceStyle">
        <item name="typeface">ProximaNova-Reg.ttf</item>
    </style>

    <style name="TypefaceStyle.ProximaNova">
        <item name="typeface">ProximaNova-Reg.ttf</item>
    </style>

    <style name="TypefaceStyle.ProximaNova.bold">
        <item name="typeface">ProximaNova-Bold.ttf</item>
    </style>

    <style name="TypefaceStyle.ProximaNova.semibold">
        <item name="typeface">ProximaNova-Sbold.ttf</item>
    </style>

    <style name="TypefaceStyle.ProximaNova.thin">
        <item name="typeface">ProximaNova-Thin.ttf</item>
    </style>

    <style name="TypefaceStyle.ProximaNova.light">
        <item name="typeface">ProximaNova-Light.ttf</item>
    </style>

    <!-- Custom TabLayout style for displaying spannable-->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?android:colorAccent</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>